<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_row_contactImage_imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:src="@drawable/avatar"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/list_row_invisibleRideId_textView"
            android:visibility="invisible"
            android:layout_height="0dp"
            android:layout_width="0dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="first name: "/>
            <TextView
                android:id="@+id/list_row_firstName_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oran"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="last name: "/>
            <TextView
                android:id="@+id/list_row_lastName_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cohen"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date: "/>
            <TextView
                android:id="@+id/list_row_ride_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.1.91"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time: "/>
            <TextView
                android:id="@+id/list_row_ride_time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from: "/>
            <TextView
                android:id="@+id/list_row_ride_from_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to: "/>
            <TextView
                android:id="@+id/list_row_ride_to_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="rishon lezion"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hitchhiker: "/>
            <TextView
                android:id="@+id/list_row_ride_hitchhiker_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp">
            <ImageButton
                android:id="@+id/list_row_ride_plus_button"
                android:textColor="#0D0D0D"
                android:textSize="25sp"
                android:layout_marginLeft="30dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon">
               </ImageButton>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>